<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_supervisor_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background"
    tools:context="com.example.omara.trackit.supervisor_panel">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@mipmap/trackit"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:columnOrderPreserved="true"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp">

        <ImageButton
            android:background="@mipmap/truck"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/button16"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content" />
        <ImageButton
            android:background="@mipmap/dest"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>
        <ImageButton
            android:background="@mipmap/onroute"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content" />
        <ImageButton
            android:background="@mipmap/onbreak"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>
        <ImageButton
            android:background="@mipmap/ingarage"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/button20"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>
        <ImageButton
            android:background="@mipmap/gps"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton21"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>
        <ImageButton
            android:background="@mipmap/camera"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton22"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>
        <ImageButton
            android:background="@mipmap/addtruck"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton24"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>
        <ImageButton
            android:background="@mipmap/shipment"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>
        <ImageButton
            android:background="@mipmap/logout"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton23"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>


    </GridLayout>

</RelativeLayout>

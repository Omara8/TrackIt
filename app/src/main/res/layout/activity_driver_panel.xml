<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_driver_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background"
    tools:context="com.example.omara.trackit.driver_panel">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:columnOrderPreserved="true"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp">

        <ImageButton
            android:background="@mipmap/begin"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"/>
        <ImageButton
            android:background="@mipmap/pause"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"/>


        <ImageButton
            android:background="@mipmap/map"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton13"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content" />
        <ImageButton
            android:background="@mipmap/end"
            android:layout_height="wrap_content"
            android:id="@+id/button15"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"/>

        <ImageButton
            android:background="@mipmap/logout"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton14"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"/>

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/trackit"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
